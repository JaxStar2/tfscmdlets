{
    "version": "0.1.0",
    "command": "powershell",
    "args": [   
        "-ExecutionPolicy",
        "Unrestricted",
        "-NoProfile",
        "-File",
        "${workspaceRoot}/build.ps1",
        "-SolutionDir",
        "${workspaceRoot}\\src",
        "-Configuration",
        "Release",
        "-Targets",
    ],
    "windows": {
        "command": "c:\\windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe"
    },
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Build",
            "showOutput": "always",
            "isBuildCommand": true,
            "suppressTaskName": false
        },
        {
            "taskName": "Test",
            "showOutput": "always",
            "isTestCommand": true,
            "suppressTaskName": false
        }
    ]
}